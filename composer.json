{
    "name": "cheppers/gathercontent-client",
    "description": "GatherContent client",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "sweetchuck/git-hooks": true
        }
    },
    "require": {
        "guzzlehttp/guzzle": "^6.5"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Sweetchuck/git-hooks"
        }
    ],
    "require-dev": {
        "sweetchuck/git-hooks": "2.x",
        "sweetchuck/lint-report": "^0.1.0",
        "sweetchuck/robo-git": "^0.3.0",
        "sweetchuck/robo-phpcs": "^0.2.0",
        "consolidation/robo": "^2.0",
        "phpunit/phpunit": "^9",
        "webmozart/path-util": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\GatherContent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cheppers\\GatherContent\\Composer\\": "src-dev/Composer",
            "Cheppers\\GatherContent\\Tests\\": "src-dev/Tests"
        }
    },
    "scripts": {
        "post-install-cmd": "\\Cheppers\\GatherContent\\Composer\\Scripts::postInstallCmd",
        "post-update-cmd": "\\Cheppers\\GatherContent\\Composer\\Scripts::postUpdateCmd"
    }
}
